   "cell_type": "code",
   "metadata": {},
   "source": [
    "# 5. 下载 APK\n",
    "from google.colab import files\n",
    "import os\n",
    "\n",
    "apk_files = [f for f in os.listdir('bin') if f.endswith('.apk')]\n",
    "if apk_files:\n",
    "    files.download(f'bin/{apk_files[0]}')\n",
    "    print(f'APK 已准备好下载: {apk_files[0]}')\n",
    "else:\n",
    "    print('未找到 APK 文件')"
